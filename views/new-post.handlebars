
    <section class="edit-post-size">
        <div class="form-heading">
            <h2>Create New Blog Post</h2>
        </div>
        <div class="form-section">
            <form class="new-post-form">
                <div class="post-title-section">
                    <label class="p-2" for="post-title-form">Blog Title</label>
                    <input class="pl-4" type="text" id="newpost-title" name="post-title" />
                </div>
                <div class="post-content-form m-3">
                    <label class="p-2" for="post-content">Content</label>
                    <textarea class="entry-field pl-3" id="newpost-content" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn submit-button">Submit</button>
            </form>
        </div>
    </section>


