<article class="new-post">
    <section class="new-form-page">
        <div class="form-heading">
            <h2>Create New Blog Post</h2>
        </div>
        <div class="form-section">
            <form class="new-post-form">
                <div class="post-title-section">
                    <label for="post-title-form">Blog Title</label>
                    <input type="text" id="newpost-title" name="post-title" />
                </div>
                <div class="post-content-form">
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="newpost-content" name="post-content"></textarea>
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </section>
</article>


